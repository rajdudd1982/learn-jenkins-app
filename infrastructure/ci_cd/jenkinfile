pipeline {
    agent any
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    node --version
                    npm --version
                    ls -la
                    npm ci
                    ls -la
                    npm run  build
                    ls -la
                    npm install serve
                    server -s build

                '''
            }
        }
        stage("Test") {
             agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
               sh "npm test"
               sh "test -f build/index.html"
            }
        }
    }

    post {
        always {
            junit 'test-results/junit.xml'
        }
    }
}